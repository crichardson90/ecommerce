<%= image_tag("brew_store.png", id: "brew-img")%>
<h1 id="new-header">New Product</h1>

<%= form_tag("/products", method: :post) do %>
  <label for="name">Enter Product Name:</label>
  <input type="text" name="name", placeholder="Enter Product Here">
  
  <br>
  
  <label for="description">Product Description:</label>
  <textarea id="description" name="description" placeholder="Enter product description here" cols="60" rows="20" style="resize: none"></textarea>
  
  <br>
  
  <label for="price"> Enter Price:</label>
  <input type="number" id="price" name="price" placeholder="Product Price">
  
  <br>
  
  <label for="image_url">Post Image:</label>
  <input type="text" name="image_url" placeholder="Post image url">
  
  <br>
  
  <input type="submit" value="Post Product">
  
  <br>
  
<% end %>