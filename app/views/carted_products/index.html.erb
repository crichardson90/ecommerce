<%= image_tag("brew_store.png", id: "brew-img")%>
<h1 id="my-cart-header">My Cart</h1>

<% @carted_products.each do |carted_product| %>
 <div>
  <h3><%= carted_product.product.name %></h3>
  <%= image_tag(carted_product.product.image_url, id:"cart-img") %>
  <h4> Quanity:<%= carted_product.amount %></h4>
  <%= link_to("Remove from cart", "/carted_products/#{carted_product.id}", method: :put, data: { confirm: "Are you sure you want to remove this item from your cart?" }) %>
</div>
  <% end %>

  <%= link_to("Checkout", "/orders", method: :post) %>